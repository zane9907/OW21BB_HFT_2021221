            <Button Content="Delete Patient" Command="{Binding DeletePatientCommand}" Margin="10" Padding="10"/>
            <Button Content="Update Patient" Command="{Binding UpdatePatientCommand}" Margin="10" Padding="10"/>
        </StackPanel>
    </Grid>-->
</Window>
